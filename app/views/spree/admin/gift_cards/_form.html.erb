<div data-hook="admin_gift_card_form_fields">
  <%= f.field_container :email, class: ['form-group'], 'data-hook' => 'email' do %>
    <%= f.label :email, Spree.t(:email) %>
    <%= f.text_field :email, class: 'form-control' %>
    <%= f.error_message_on :email %>
  <% end %>

  <%= f.field_container :name, class: ['form-group'], 'data-hook' => 'name' do %>
    <%= f.label :name, Spree.t(:name) %>
    <%= f.text_field :name, class: 'form-control' %>
    <%= f.error_message_on :name %>
  <% end %>

  <%= f.field_container :sender_name, class: ['form-group'], 'data-hook' => 'sender_name' do %>
    <%= f.label :sender_name, Spree.t(:sender_name) %>
    <%= f.text_field :sender_name, class: 'form-control' %>
    <%= f.error_message_on :sender_name %>
  <% end %>

  <%= f.field_container :sender_email, class: ['form-group'], 'data-hook' => 'sender_email' do %>
    <%= f.label :sender_email, Spree.t(:sender_email) %>
    <%= f.text_field :sender_email, class: 'form-control' %>
    <%= f.error_message_on :sender_email %>
  <% end %>

  <%= f.field_container :delivery_on, class: ['form-group'], 'data-hook' => 'delivery_on' do %>
    <%= f.label :delivery_on, Spree.t(:delivery_on) %>
    <%= f.text_field :delivery_on, class: 'form-control' %>
    <%= f.error_message_on :delivery_on %>
  <% end %>

  <%= f.field_container :note, class: ['form-group'], 'data-hook' => 'note' do %>
    <%= f.label :note, Spree.t(:note) %>
    <%= f.text_area :note, rows: 3, class: 'form-control' %>
    <%= f.error_message_on :note %>
  <% end %>

  <%= f.field_container :original_value, class: ['form-group'], 'data-hook' => 'original_value' do %>
    <%= f.label :original_value, Spree.t(:original_value) %>
    <%= f.text_field :original_value, class: 'form-control' %>
    <%= f.error_message_on :original_value %>
  <% end %>
</div>
